<div class="row">
  <div class="col-md-12">
    <h3>Welcome, Client</h3>
    <p>Your current invoice total is <span class="text-primary"><b><%= amount.format %></b></span>. Please enter your payment details below.</p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div id="messages" class="alert alert-danger" style="display: none">
      <ul></ul>
    </div>
  </div>

  <div class="col-md-12">
    <form>
      <div class="row">
        <div class="col-md-6 col-sm-6">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Cardholder name">
          </div>
          <div class="form-group">
            <label for="address1">Street Address</label>
            <input type="text" class="form-control" id="address1" name="address1" placeholder="123 Main St">
          </div>
          <div class="form-group">
            <label for="address2">Suite, Apt</label>
            <input type="text" class="form-control" id="address2" name="address2" placeholder="Suite 410">
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="city">City</label>
                <input type="text" class="form-control" id="city" name="city" placeholder="Austin">
              </div>
            </div>
            <div class="col-md-2">
              <div class="form-group">
                <label for="state">State</label>
                <input type="text" class="form-control" id="state" name="state" placeholder="TX">
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label for="postal_code">Postal Code</label>
                <input type="text" class="form-control" id="postal_code" name="postal_code" placeholder="12345">
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-sm-6">
          <div class="row">
            <div class="col-md-6 col-sm-12">
              <div class="form-group">
                <label for="number">Card Number</label>
                <input type="text" class="form-control" id="number" name="number">
              </div>
            </div>
            <div class="col-md-3 col-sm-12">
              <div class="form-group">
                <label for="cvv">CVV</label>
                <input type="text" class="form-control" id="cvv" name="cvv">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3 col-sm-6">
              <div class="form-group">
                <label for="exp_month">Exp Month</label>
                <input type="text" class="form-control" id="exp_month" name="exp_month" placeholder="12">
              </div>
            </div>
            <div class="col-md-3 col-sm-6">
              <div class="form-group">
                <label for="exp_month">Exp Year</label>
                <input type="text" class="form-control" id="exp_year" name="exp_year" placeholder="2020">
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3 col-sm-3">
          <button type="button" class="btn btn-primary btn-block" id="pay">Pay Now</button>
        </div>
      </div>
    </form>
  </div>
</div>